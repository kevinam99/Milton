{
    "manifest_version": 2,
    "name": "Milton",
    "version": "1.0.0",

    "description": "Get the meanings of the words that millenials say straight from the Urban Dictionary",
    "homepage_url": "https://github.com/kevinam99/Milton",


    "permissions": [
        "contextMenus",
        "tabs"
    ],

    "browser_action": {
        "default_title": "Milton"  ,
        "default_popup": "popup/index.html"  
    },

    "background": {
        "scripts": ["content_scripts/milton.js"]
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup/script.js"]
        }
    ]
}